<style media="screen">
        form{
            display: flex;
            flex-flow: column;
        }

        form > label{
            display: flex;
            flex-flow: column;
            width: max-content;
            margin-top: 20px;
        }

        form > label *{
            margin-bottom: 10px;
        }

        #file-input{
            display: none;
        }

        #drop-zone{
            border: 1px dashed;
            padding: 20px 0px;
            text-align: center;
        }

        #canvas-user-img{
            display: none;
        }
</style>

<div class="wrapper">
    <form class="" action="/settings/edit-user" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <label for="">
            <span>Ваша аватарка</span>
            <img id="img" src="/img/user-photo/{{user.img}}" width="300px" alt="">
            <div id="drop-zone">
                Загрузите новое изображение
            </div>
            <div id="output-zone">

            </div>
            <input id="file-input" type="file" name="filedata" value="">
        </label>
        <label>
            <span>Введите e-mail</span>
            <input type="email" name="email" value="{{user.email}}">
        </label>
        <label>
            <span>Введите Имя</span>
            <input type="text" name="firstName" value="{{user.name.firstName}}">
        </label>
        <label>
            <span>Введите Фамилию</span>
            <input type="text" name="secondName" value="{{user.name.secondName}}">
        </label>
        <label>
            <span>Введите Дату рождения</span>
            <input type="date" name="dateBorn" value="{{user.dateBorn}}">
        </label>
        <label>
            <input type="submit" name="" value="Зарегистрироваться">
        </label>
        <label>
            {{error}}
        </label>
    </form>
</div>

<script type="text/javascript" src="/js/settings/editUser.js">

</script>
